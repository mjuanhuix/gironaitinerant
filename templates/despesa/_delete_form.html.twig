<form method="post" action="{{ path('despesa_delete', {'id': despesa.id}) }}" onsubmit="return confirm('Estas segur que vols eliminar?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ despesa.id) }}">
    <button class="btn">Eliminar</button>
</form>
