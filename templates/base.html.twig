<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}GironaItinerant{% endblock %}</title>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" >
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>


        {% block stylesheets %}
            <link href="{{ asset('css/girona.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
    <header>

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{  path("escola_index") }}">Girona Itinerant</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                    {% set route = app.request.get('_route')%}

                    <ul class="nav navbar-nav">

                        {% block menu %}
                            <li class="{%  if route=="excursions_futures" %} {{ "active" }}{% endif %}"><a href="{{ path("escola_index") }}">Excursions futures</a></li>
                            <li class="{%  if route=="excursions_passades" %} {{ "active" }}{% endif %}"><a href="{{ path("escola_index") }}">Excursions passades</a></li>
                            <li class="{%  if route=="beneficis" %} {{ "active" }}{% endif %}"><a href="{{ path("escola_index") }}">Beneficis</a></li>

                        {% endblock menu %}
                    </ul>


                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-cog"></span> <span class="caret"></span></a>
                            <ul class="dropdown-menu">

                                <li><a href="{{ path("escola_index") }} ">Escoles</a></li>
                                <li><a href="{{ path("professor_index") }} ">Professors</a></li>
                                <li><a href="{{ path("guia_index") }}">Guies</a></li>
                                <li><a href="{{ path("ciutat_index") }}">Ciutats</a></li>

                                <li role="separator" class="divider"></li>
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

    </header>


        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
